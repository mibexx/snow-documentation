<!DOCTYPE html>
<html lang="en">
    {% embed molecule('header', 'Application') %}{% endembed %}
    <body id="page-top">
        <div id="wrapper">

            {% embed molecule('navigation', 'Application') %}{% endembed %}

            <div id="content-wrapper" class="d-flex flex-column">
                <div id="content">
                    {% embed molecule('topbar', 'Application') %}{% endembed %}
                    <div class="container-fluid">
                        {% block body %}{% endblock %}
                    </div>
                </div>
                {% embed molecule('footer', 'Application') %}{% endembed %}
            </div>
        </div>

        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <script src="/js/app.js"></script>
    </body>
</html>